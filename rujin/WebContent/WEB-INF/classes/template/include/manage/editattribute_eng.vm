<table width="100%" cellspacing="1" cellpadding="3" border="0" align="center" bordercolordark="#cccccc" bordercolorlight="#ffffff">                        <form name="form1" action="$!_url/editattribute_eng.jhtml?act=$act&pid=$!attribute.id" method="post">                          <tbody><tr align="center">                            <td height="40" bgcolor="#ffffff" colspan="2" style="font-size:18px;"><strong>#if($act=='add')添加#else 编辑#end产品属性信息(English)<br /><br /></strong></td>                          </tr>						  						  						  						  <tr>                            <td height="25" width="45%" bgcolor="#ffffff" align="right"><strong>ID：</strong><br>必须是与前面属性ID对应的数字							</td>                            <td width="75%" bgcolor="#ffffff"><input type="text" class="style" value="$!attribute.id" id="id" name="id" style="width: 280px;">                                <font color="#ff0000">* </font>#if($error.idValueError)<br /> <font color="red"><b> !!! $error.idValueError </b></font>#end								#if($error.idEmptyError)<br /> <font color="red"><b> !!! $error.idEmptyError </b></font>#end</td>                          </tr>						                            <tr>                            <td height="25" width="45%" bgcolor="#ffffff" align="right"><strong>产品ID：</strong><br>							</td>                            <td width="75%" bgcolor="#ffffff"><input type="text" class="style" value="$!attribute.productId" id="productId" name="productId" style="width: 280px;">                                <font color="#ff0000">* </font>								#if($error.productIdFormatError)<br /> <font color="red"><b> !!! $error.productIdFormatError </b></font>#end								#if($error.productIdEmptyError)<br /> <font color="red"><b> !!! $error.productIdEmptyError </b></font>#end								#if($error.productIdNotExistsError)<br /> <font color="red"><b> !!! $error.productIdNotExistsError </b></font>#end</td>                          </tr>                                                    <tr>                            <td height="25" bgcolor="#ffffff" align="right"><strong>属性名：</strong><br>							</td>                            <td bgcolor="#ffffff">							<textarea id="attrName" name="attrName" style="width: 280px;">$!attribute.attrName</textarea>                                <font color="#ff0000">* </font>#if($error.attrNameEmptyError)<br /> <font color="red"><b> !!! $error.attrNameEmptyError </b></font>#end							</td>                          </tr>                          <tr>                            <td height="25" bgcolor="#ffffff" align="right"><strong>属性值：</strong><br>                            <td bgcolor="#ffffff"><input type="text" class="style"  value="$!attribute.attrValue"  id="attrValue" name="attrValue" style="width: 280px;">                                <font color="#ff0000">*</font>								#if($error.attrValueEmptyError)<br /> <font color="red"><b> !!! $error.attrValueEmptyError </b></font>#end								</td>                          </tr>                          </tr>                          <tr>                            <td height="25" bgcolor="#ffffff" align="right"><strong>显示序值：</strong><br>                            <td bgcolor="#ffffff"><input type="text" class="style"  value="$!attribute.displayOrder"  id="displayOrder" name="displayOrder" style="width: 280px;">                                <font color="#ff0000">*</font>								#if($error.attrDisplayOrderError)<br /> <font color="red"><b> !!! $error.attrDisplayOrderError </b></font>#end								</td>                          </tr>						</form>                                                                 <tr>                            <td height="25" bgcolor="#ffffff" align="center" colspan="2">							<input type="button" name="update" id="update" class="style" value=#if($act=='add')"添加" #else "修改" #end onclick="javascript:form1.submit();">                            </td>                          </tr>                    </tbody></table>